datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
      @@map(name: "users")
      id            Int         @default(autoincrement()) @id
      email         String      @unique
      password      String
      contacts      Contact[]
}

model Contact {
    @@map(name: "contacts")
    id              Int             @default(autoincrement())  @id
    name            String
    email           String
    phone           String?
    contactType     ContactType     @default(PERSONAL)
    date            DateTime
    user            User            @relation(fields: [userId], references: [id])
    userId          Int
}


enum ContactType {
    PERSONAL
    PROFESSIONAL
}


